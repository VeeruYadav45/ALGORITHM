class Solution {
public:
    int minOperations(int n) {
        vector<int>v; int s=0;
        for(int i=0;i<n;i++){
            v.push_back((2*i)+1);
            s+=v[i];
        }
        int t=s/n; int l=0;
        sort(v.begin(),v.end());
        for(int i=0;i<n;i++){
            if(v[i]<t){
                l+=t-v[i];
            }
            else break;
        }
        return l;
    }
};
