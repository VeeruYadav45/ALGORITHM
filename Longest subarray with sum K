class Solution{
public:
    int longestSubarray(vector<int> &nums, int k){
        int r=0;int l=0;
        long long sum=nums[0];
        int m=0;
        int n=nums.size();
        while(r<n){
            while(l<=r&&sum>k){
                sum-=nums[l];
                l++;
            }
            if(sum==k) m=max(max,r-l+1);
            r++;
           if(r<n) sum+=nums[r];

        }
        return m;
    }
};
